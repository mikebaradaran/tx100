<!DOCTYPE html>
<html>
<head>
    <title>QA</title>
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <script src="index.js" defer></script>
    <link href="index.css" rel="stylesheet" />
</head>
<body>
    <div id="site" style="display:none;"><%= commonData.appName %></div>
    <div class="grid-container">
        <div class="header">
            <div class="qaLogo"> <img src="qa_logo.svg" /> </div>
            <div id="course_title"></div>
            <h3 id="trainer"></h3>
        </div>
        <div class="timer" id="timerContainer">
            <input type="range" id="timer" value="0" min="0" max="120" oninput="this.nextElementSibling.value = this.value" />
            <output id="divTimer"></output>
            <span onclick="startTimer('timer', 'divTimer')">
                <emoji title="Click to start the timer">&#9200;</emoji>
            </span>
            <span id="message" onclick="this.innerHTML=''"></span>
        </div>

        <div class="passwords">
            <emoji>&#128218</emoji>
            <a id="material" href="" target="_blank">
                Course material
            </a>
            <button onclick="copy(courseData.password1)">Copy email</button>
            <button onclick="copy(courseData.password2)">Copy password</button>
            <button onclick="copy(courseData.password3)">Copy access code</button>
            <a onclick="copy(courseData.mimeo)" href="https://mimeo.digital/QALtd/distributions">Mimeo</a>
        </div>
        <div class="pcs">
            <ol id="pcs"></ol>
            <div style="display: flex">
              <textarea rows="8" id="txtArea"style="flex: 1"></textarea>
            </div>
        </div>

        <div class="afa">
            <button onclick="afa()">Copy WebEx</button>
            <select id="cboMessages"></select>
            <a href="https://signin.qa.com/" target="_blank">Sign</a>
        </div>
        
        <div class="students"><object id="studentMessages" data="<%= commonData.appName %>/student"></object></div>
        <div class="messages">
            <div class="MessagesDiv">
                <object data="<%= commonData.appName %>/trainer" height="750" width="500px"></object>
            </div>
        </div>
    </div>
</body>
</html>
